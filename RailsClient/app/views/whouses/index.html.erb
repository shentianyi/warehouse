<h2>仓库列表</h2>

<%= link_to "新建分仓库", send("new_#{@model}_path"),:class=>'btn btn-default' %>
<%= link_to "上传/更新分仓库", send("import_#{@model.pluralize}_path") ,:class=>'btn btn-default'%>
<%= link_to "下载", send("download_#{@model.pluralize}_path"),data: { confirm: 'Are you sure?' },:class=>'btn btn-default' %>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @whouses %>
  </div>
  <%= will_paginate @whouses, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
    <tr>
      <th>序号</th>
      <th>编号</th>
      <th>名称</th>
      <th>所属地点</th>
      <th>库位</th>
      <th>是MRP仓库</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @whouses.each_with_index do |whouse,index| %>
      <tr>
        <td><%= index +@whouses.offset+1%>
        <td><%= whouse.id %> </td>
        <td><%= whouse.name %></td>
        <td><%= whouse.location.name if whouse.location %></td>
        <td><%= whouse.is_mrp_whouse ? '是' : '否'  %></td>
        <td><%= link_to '库位列表',positions_whouse_path(whouse) %><span class="badge pull-right"><%= whouse.positions.count%></span></td>
        <td><%= link_to '详细', whouse ,:class=>"btn btn-default"%></td>
        <td><%= link_to '编辑', edit_whouse_path(whouse),:class=>"btn btn-default" %></td>
        <td><%= link_to '删除', whouse, method: :delete, data: { confirm: '确认删除?' },:class=>"btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @whouses, :container => false %>
</div>
<br>
