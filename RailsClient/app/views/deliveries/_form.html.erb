<%= form_for(@delivery) do |f| %>
  <% if @delivery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul>
      <% @delivery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <p>
      <%= f.label :state,'状 态'%>
      <%=  f.select(:state,DeliveryState.state,{include_blank: false})%>
    </p>

    <p>
      <%= f.label :receiver_id,'接收员'%>
      <%= f.select(:receiver_id, User.role_user('400').collect{|u| [u.name,u.id]})%>
    </p>

    <p>
      <%= f.label :delivery_date, '发送日期' %>
      <%= f.text_field :delivery_date, :value=>(@delivery.delivery_date.localtime.strftime('%Y-%m-%d %H:%M') if @delivery.delivery_date),class:'datepicker'%>
    </p>

    <p>
      <%= f.label :received_date, '接收时间' %>
      <%= f.text_field :received_date, :value=>(@delivery.received_date.localtime.strftime('%Y-%m-%d %H:%M') if @delivery.received_date),class:'datepicker'%>
    </p>

    <p>
      <%= f.label :remark,'备 注'%>
      <%= f.text_field :remark%>
    </p>

  <div class="actions">
    <%= f.submit value: '提 交', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
<script type="text/javascript">
  $(".datepicker").datetimepicker({
  lang:'ch',
  format: 'Y-m-d H:i'
  })
</script>
