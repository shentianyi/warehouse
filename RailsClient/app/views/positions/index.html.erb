<h2>库位列表</h2>

<%= link_to "新建库位", send("new_#{@model}_path") %>
<%= link_to "上传/更新库位", send("import_#{@model.pluralize}_path") %>
<%= link_to "下载", send("download_#{@model.pluralize}_path") %>

<br>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @positions %>
  </div>
  <%= will_paginate @positions, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
    <tr>
      <th>序号</th>
      <th>编号</th>
      <th>详细库位</th>
      <th>所属仓库</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each_with_index do |position,index| %>
      <tr>
        <td><%= index %>
        <td><%= position.id%></td>
        <td><%= position.detail%></td>
        <td><%= position.whouse.name %></td>
        <td><%= link_to '详细', position %></td>
        <td><%= link_to '编辑', edit_position_path(position) %></td>
        <td><%= link_to '删除', position, method: :delete, data: { confirm: '确认删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @positions, :container => false %>
</div>

