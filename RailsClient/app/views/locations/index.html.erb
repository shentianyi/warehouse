<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">No</th>
      <th colspan="3">ID</th>
      <th colspan="3">Name</th>
      <th colspan="3">Destination</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each_with_index do |location,index| %>
      <tr>
        <td colspan="3"><%= index %>
        <td colspan="3"><%= location.id %></td>
        <td colspan="3"><%= location.name %></td>
        <td colspan="3"><%= location.destination.name if location.destination %></td>
        <td><%= link_to 'Users',users_location_path(location) %></td>
        <td><%= link_to 'Ware houses',whouses_location_path(location) %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @locations, :page_links => false %>
<br>

<%= link_to 'New Location', new_location_path %>
