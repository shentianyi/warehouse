<h2>员工择货规则</h2>
<div>
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div>
      <span>员工号：
        <input type="text" name="pick_item_filter[user_id]" value="<%= @user_id %>"/>
        <input type="hidden" name="pick_item_filter[user_id_fuzzy]"/>
      </span>
      <input type="submit" value="查 找" class="btn btn-primary"/>
    </div>
  </form>
</div>

<% if current_user.permission?(:operate_basic_info_create) %>
    <%= link_to "新建员工择货规则", send("new_#{@model}_path") %>
    <%= link_to "上传/更新员工择货规则", send("import_#{@model.pluralize}_path") %>
<% end %>
<%= link_to "下载员工择货规则", send("download_#{@model.pluralize}_path") %>
<br>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @pick_item_filters %>
  </div>
  <%= will_paginate @pick_item_filters, :container => false %>
</div>
<table class="table table-bordered table-striped globle-table">
  <thead>
  <tr>
    <th></th>
    <th>员工号</th>
    <th>筛选类型名称</th>
    <th>筛选类型</th>
    <th>值</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pick_item_filters.each_with_index do |pick_item_filter, i| %>
      <tr>
        <td><%= i+@pick_item_filters.offset+1 %>
        <td><%= pick_item_filter.user_id %></td>
        <td><%= pick_item_filter.filter_type_display %></td>
        <td><%= pick_item_filter.filterable_type %></td>
        <td><%= pick_item_filter.filterable_id %></td>
        <% if current_user.permission?(:operate_basic_info_edit) %>
            <td><%= link_to '编辑', edit_pick_item_filter_path(pick_item_filter) %></td>
        <% end %>
        <% if current_user.permission?(:operate_basic_info_delete) %>
            <td><%= link_to '删除', pick_item_filter, method: :delete, data: {confirm: '确定删除?'} %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @pick_item_filters, :container => false %>
</div>