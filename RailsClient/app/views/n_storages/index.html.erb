<style>
    .col-sm-12 {
        height: 40px;
        line-height: 40px;
    }

    input[type='number'],.datepicker {
        width: 150px;
    }

    .up_search {
        text-align: right;
        cursor: pointer;
        margin-bottom: 10px;
        margin-top: -40px;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }
      a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">库存管理</li>
    <li class="active">
      库存查询
    </li>
    <li class="active">
      详细库存查询
    </li>
  </ol>
</div>

<div class="all-search">
  <form method="get" action="<%= send("search_#{@model.pluralize}_path") %>">
    <div class="col-sm-12">
      <div class="col-sm-4">
        零件号：
        <input type="text" name="n_storage[partNr]" value="<%= @partNr %>"/>
      </div>
      <div class="col-sm-4">
        包装类型：
        <%= select_tag('part[package_type]', options_from_collection_for_select(PackageType.all, :id, :name, @package_type), include_blank: true) %>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="col-sm-4">
        仓库号：
        <%= select_tag('n_storage[ware_house_id]', options_from_collection_for_select(Whouse.all, :nr, :name, @ware_house_id), include_blank: true) %>
      </div>
      <div class="col-sm-4">
        库位号：
        <input type="text" name="n_storage[position_id]" value="<%= @position_id %>"/>
      </div>
      <div class="col-sm-4">
        唯一码：
        <input type="text" name="n_storage[packageId]" value="<%= @packageId %>"/>
        <input type="hidden" name="n_storage[packageId_fuzzy]"/>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="col-sm-4">
        更新日期：
        <input type="text" name="n_storage[updated_at][start]" class="datepicker" value="<%= @updated_at_start %>"/>
        ~ <input type="text" name="n_storage[updated_at][end]" class="datepicker" value="<%= @updated_at_end %>"/>
      </div>
      <div class="col-sm-4">
        FIFO：
        <input type="text" name="n_storage[fifo][start]" class="datepicker" value="<%= @fifo_start %>"/>
        ~ <input type="text" name="n_storage[fifo][end]" class="datepicker" value="<%= @fifo_end %>"/>
      </div>
      <div class="col-sm-4">
        库存量：
        <input type="number" name="n_storage[qty][start]" value="<%= @qty_start %>"/>
        ~ <input type="number" name="n_storage[qty][end]" value="<%= @qty_end %>"/>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="col-sm-4">
        <input type="submit" value="查找" class="btn btn-primary" name="search" style="width: 200px;"/>
      </div>
      <div class="col-sm-4">
        <input type="submit" value="导出" class="btn btn-primary" name="download" style="width: 200px;"/>
      </div>
    </div>
  </form>
</div>

<div class="col-sm-12">
  <div class="col-sm-8"></div>
  <div class="col-sm-4 up_search">
    <i class=" glyphicon glyphicon-chevron-up" title="收起搜索条件"></i>
  </div>
</div>

<div class="col-sm-12" style="margin-top: -10px;margin-bottom: 20px;">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @n_storages %>
    </div>
    <%= will_paginate @n_storages, :container => false %>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>NO.</th>
    <th>零件号</th>
    <th>包装类型</th>
    <th>唯一码</th>
    <th>库存量</th>
    <th>FIFO</th>
    <th>更新日期</th>
    <th>仓库号</th>
    <th>库位号</th>
    <th>备注</th>
    <!--<th>操作</th>-->
  </tr>
  </thead>
  <tbody>
  <% @n_storages.each_with_index do |storage, i| %>
      <tr>
        <td><%= i+@n_storages.offset+1 %></td>
        <td><%= storage.part.nr if storage.part.present? %></td>
        <td><%= storage.part.package_name if storage.part.present? %></td>
        <td><%= storage.packageId %></td>
        <td><%= storage.qty %></td>
        <td><%= storage.fifo.localtime if storage.fifo %> </td>
        <td><%= storage.updated_at.localtime if storage.updated_at %> </td>
        <td><%= storage.whouse.name if storage.whouse.present? %></td>
        <td><%= storage.position.nr if storage.position.present? %></td>
        <td><%= storage.remarks %></td>
        <!--
        <% if current_user.can_edit_inventory? %>-->
            <!--<td><%= link_to '编辑', edit_n_storage_path(storage), :class => 'btn btn-default' %></td>-->
            <!--
        <% end %>-->
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @n_storages, :container => false %>
</div>

<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });
    init_check();
    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>