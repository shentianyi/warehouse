<h2>库存查询</h2>
<div>
  <form method="get" action="<%= send('search_n_storages_path') %>">
    <div>
      <div>
        <span>零件号：
          <input type="text" name="partNr" value="<%= @partNr %>"/>
          <input type="hidden" name="n_storage[partNr]"/>
        </span>

        <div>
          <input type="submit" value="查找" class="btn btn-primary" name="search"/>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @n_storages %>
  </div>
  <%= will_paginate @n_storages, :container => false %>
</div>
<table class="table table-striped table-condensed table-hover">
  <thead>
  <tr>
    <th>NO.</th>
    <th>零件号</th>
    <th>包装号</th>
    <th>库存量</th>
    <th>仓库</th>
    <th>库位</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @n_storages.each_with_index do |storage, i| %>
      <tr>
        <td><%= i+@n_storages.offset+1 %></td>
        <td><%= storage.partNr %></td>
        <td><%= storage.packageId %></td>
        <td><%= storage.qty %></td>
        <td><%= storage.ware_house_id %></td>
        <td><%= storage.position %></td>
        <td><%= link_to '编辑', edit_n_storage_path(storage), :class => 'btn btn-default' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @n_storages, :container => false %>
</div>