<div class="panel panel-warning">
  <div class="panel-heading">
    <h2>盘点差异报表</h2>
  </div>
  <div class="panel-body">
    <br/>
    <div>
      <script type="text/javascript">
        function submitForm() {
            document.forms[0].submit();
        }
          
      </script>
     
    </div>
    <div>
      <form method="get" action="<%= discrepancy_inventory_lists_path %>">
          <div>
            <span class="label label-info">盘点清单:</span>
			<% inventory_lists_array = InventoryList.all.map { |inventory_list| [inventory_list.name, inventory_list.id]}%>
            <%= select_tag(:inventory_list_id,options_for_select(inventory_lists_array),include_blank: false)%>
            
            <span class="label label-info">显示方式:</span>
            <%= select_tag :format, options_for_select([["Web", "html"],["Excel File(MS 07 or later)", "xlsx"]], "html") %>
           
            <input type="button" value="确定" class="btn btn-warning" name="commit" onclick="submitForm()"/>
          </div>
      </form>
    </div>
  </div>
  <br/>
  <div class="alert alert-success" role="alert">
    <p><%= @title%></p>
  </div>
  <table class="table table-striped table-condensed table-hover">
    <thead>
    <tr>
      <th>编号</th>
      <th>零件号</th>
      <th>库存数量</th>
      <th>盘点数量</th>
      <th>差异值</th>
    </tr>
    </thead>
    <tbody>
    <% i = 0%>
    <% @inventory_list_items.each_with_index do |o, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= o.partNr %></td>
          <td><%= o.qty %></td>
          <td><%= o.qty2 %></td>
          <td><%= o.diff %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

