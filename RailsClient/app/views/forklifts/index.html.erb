<h1>Listing forklifts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">No</th>
      <th colspan="3">ID:</th>
      <th colspan="3">State:</th>
      <th colspan="3">Delivery:</th>
      <th colspan="3">Stocker:</th>
      <th colspan="3">Creator:</th>
      <th colspan="3">Ware House:</th>
      <th colspan="3">Sum Packages:</th>
      <th colspan="3">Accepted Packages:</th>
      <th colspan="3">remark:</th>
    </tr>
  </thead>

  <tbody>
    <% @forklifts.each_with_index do |forklift,index| %>
      <tr>
        <td><%= index %>
        <td colspan="3"><%= forklift.id%></td>
        <td colspan="3"><%= ForkliftState.display(forklift.state)%></td>
        <td colspan="3"><%= forklift.delivery_id %></td>
        <td colspan="3"><%= forklift.stocker.id if forklift.stocker%></td>
        <td colspan="3"><%= forklift.user.id if forklift.user%></td>
        <td colspan="3"><%= forklift.whouse.name%></td>
        <td colspan="3"><%= forklift.sum_packages%></td>
        <td colspan="3"><%= forklift.accepted_packages%></td>
        <td colspan="3"><%= forklift.remark%></td>
        <td><%= link_to 'Show', forklift %></td>
        <td><%= link_to 'Edit', edit_forklift_path(forklift) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
