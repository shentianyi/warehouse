<div class="panel panel-primary form-signin-panel" style="background: #f2f2f2;border: none;text-align: center;">
  <div class="panel-heading" style="border-top-right-radius: 10px;border-top-left-radius: 10px;">
    <h2 class="panel-title">精密物料控制系统</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal form-signin', role: 'form'}) do |f| %>
      <p>
        <span class="alert error" style="box-shadow: none;"><%= alert %></span>
      </p>

      <div class="form-group">
        <%= f.label :nr, '员工号', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :nr, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, '密 码', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <hr style="border-bottom: 1px dashed #999;">

      <div class="form-group" style="display:flex;">
        <% if devise_mapping.rememberable? %>
            <div class="col-sm-4">
              <%= f.check_box :remember_me %> 记住我
            </div>
        <% end %>
        <div class="col-sm-8">
          <%= f.submit value: '登 录', class: 'btn btn-primary', style: 'width:200px;' %>
        </div>
      </div>
  <% end %>
</div>