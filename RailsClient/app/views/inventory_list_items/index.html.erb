<h2>盘点项列表</h2>

<%= link_to "新建盘点项", send("new_#{@model}_path"),:class=>'btn btn-default' %>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @inventory_list_items %>
  </div>
  <%= will_paginate @inventory_list_items, :container => false %>
</div>

<table class="table table-bordered table-striped globle-table">
  <thead>
    <tr>
      <th>包装号</th>
      <th>唯一号</th>
      <th>零件号</th>
	  <th>数量</th>
      <th>盘点库位号</th>
	  <th>目前仓库</th>
	  <th>目前库位</th>
      <th>创建人</th>
	  <th>是否在库存</th>
      <th>所属清单</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_list_items.each do |inventory_list_item| %>
      <tr>
        <td><%= inventory_list_item.package_id %></td>
        <td><%= inventory_list_item.unique_id %></td>
        <td><%= inventory_list_item.part_id %></td>
        <td><%= best_in_place inventory_list_item, :qty, as: :input %></td>
        <td><%= inventory_list_item.position %></td>
        <td><%= inventory_list_item.current_whouse %></td>
        <td><%= inventory_list_item.current_position %></td>
        <td><%= inventory_list_item.user_id %></td>
		<% if inventory_list_item.in_store == true %>
        <td>是</td>
		<% else %>
		<td>否</td>
		<% end %>
        <td><%= inventory_list_item.inventory_list.name %></td>
        <td><%= link_to 'Show', inventory_list_item %></td>
        <td><%= link_to 'Edit', edit_inventory_list_item_path(inventory_list_item) %></td>
        <td><%= link_to 'Destroy', inventory_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="digg_pagination">
  <%= will_paginate @inventory_list_items, :container => false %>
</div>
