<style>
    .col-sm-12 {
        height: 40px;
    }

    select {
        min-width: 150px;
    }

    .up_search {
        text-align: center;
        cursor: pointer;
    }

    a:hover, a:active {
        text-decoration: none;
        background-color: white;
        color: black;
        outline: none;
    }

    .IconA {
        margin: 0 10px;
        font-size: 1.2em;
    }

    .IconA:hover {
        text-decoration: none;
        background-color: white;
    }

    .table > thead > tr > th, .table > tbody > tr > td {
        text-align: center;
    }

    .label {
        font-size: 1em;
    }
</style>

<div class="panel panel-default">
  <ol class="breadcrumb" style="background: transparent;padding: 20px 0 0 20px;font-size: 1.2em;">
    <li class="active">运输管理</li>
    <li class="active">运输管理</li>
    <li class="active">
      发运流程
    </li>
    <li>
      <a href="#">包装箱</a>
    </li>
  </ol>
</div>

<div class="all-search">
  <form method="get" action="<%= send("search_logistics_containers_path") %>">
    <div class="col-sm-12">
      <div class="col-sm-4">
        包装箱号：
        <input type="text" name="package[container_id]" value="<%= @package_container_id %>"/>
        <input type="hidden" name="package[container_id_fuzzy]"/>
      </div>
      <div class="col-sm-4">
        零件号： 
        <input type="text" name="containers[part_id]" value="<%= @container_part_id %>"/>
        <input type="hidden" name="containers[part_id_fuzzy]"/>
      </div>
      <div class="col-sm-4">
        备货员工号：
        <input type="text" name="package[user_id]" value="<%= @package_user_id %>"/>
        <input type="hidden" name="package[user_id_fuzzy]"/>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="col-sm-4">
        状态：  
        <%= select 'package', 'state', MovableState.state, selected: @package_state, include_blank: true %>
      </div>
      <div class="col-sm-8">
        创建日期：
        <input type="text" name="package[created_at][start]" class="datepicker" value="<%= @package_created_at_start %>"/>
        ~ <input type="text" name="package[created_at][end]" class="datepicker" value="<%= @package_created_at_end %>"/>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="col-sm-10">
        <h4 style="margin-top: 0;">
          根据操作记录
          <hr style="border-bottom: 1px dashed #000;margin: -10px 0 0 120px">
        </h4>
      </div>

      <div class="col-sm-2" style="text-align: right;">
        <input type="hidden" value="package" name="model"/>
        <input type="hidden" value="records" name="tables"/><!--使用分号隔开，这里的表应该与上面的参数一致-->
        <input type="submit" value="查 找" class="btn btn-primary" style="width: 150px;height: 50px;margin-top: -20px;"/>
      </div>
    </div>

    <div class="col-sm-12" style="border-bottom: 1px solid #CCCCCC;">
      <div class="col-sm-3">
        员工号：
        <input type="text" name="records[impl_id]" value="<%= @records_impl_id %>"/>
        <input type="hidden" name="records[impl_id_fuzzy]"/>
      </div>
      <div class="col-sm-3">
        操 作：
        <%= select 'records', 'impl_user_type', ImplUserType.list_action_menu, selected: @records_impl_user_type, include_blank: true %>
      </div>
      <div class="col-sm-6">
        时  间：
        <input type="text" name="records[impl_time][start]" class="datepicker" value="<%= @records_impl_time_start %>"/>
        ~ <input type="text" name="records[impl_time][end]" class="datepicker" value="<%= @records_impl_time_end %>"/>
      </div>
    </div>
  </form>
</div>

<div class="col-sm-12 up_search">
  <i class=" glyphicon glyphicon-chevron-up" title="收起搜索条件"></i>
</div>

<% if current_user.permission?(:operate_delivery) %>
    <%= link_to '导入离线包装箱', import_logistics_containers_path, :class => "btn btn-warning", :style => 'color:white;margin:-20px 0 25px 20px;' %>
<% end %>

<div class="col-sm-12">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @packages %>
    </div>
    <%= will_paginate @packages, :container => false %>
  </div>
</div>

<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th>序号</th>
    <th>包装箱号</th>
    <th>零件号</th>
    <th>数量</th>
    <th>入库时间</th>
    <th>备注</th>
    <th>状态</th>
    <th>上架库位</th>
    <th>所属托盘</th>
    <th>所属运单</th>
    <th>最新记录</th>
    <th colspan="4">操作</th>
  </tr>
  </thead>

  <tbody>
  <% @packages.each_with_index do |package, index| %>
      <% ppresenter = PackagePresenter.new(package) %>
      <% if package.id && package.id != "" %>
          <tr>
            <td><%= index+@packages.offset+1 %></td>
            <td><%= package.container_id %></td>
            <td><%= package.package.part.nr_for_user(current_user) if package.package %></td>
            <td><%= package.package.quantity_str if package.package %></td>
            <td><%= package.package.fifo_time_display if package.package %></td>
            <td><%= package.remark %></td>
            <td><%= package.state_display %></td>
            <td><%= ppresenter.position_nr %></td>
            <td>
              <%= link_to content_tag(:span, package.parent.container_id, :class => 'label label-primary'), forklift_path(package.parent) if package.parent %>
            <td>
              <%= link_to content_tag(:span, package.parent.parent.container_id, :class => 'label label-primary'), delivery_path(package.parent.parent) if package.parent && package.parent.parent %>
            </td>

            <td><%= package.get_records.last.display %></td>

            <td>

              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-eye-open', :style => 'color:green;'), package_path(package), :class => 'IconA', :title => '查看包装箱详情' %>

              <% if current_user.permission?(:operate_delivery) %>

                  <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-pencil', :style => 'color:#4F94CD;'), edit_package_path(package), :class => 'IconA', :title => '编辑包装箱' %>

                  <%= link_to content_tag(:i, '', :class => ' glyphicon glyphicon-trash', :style => 'color:darkred;'), package_path(package), method: :delete, data: {confirm: '确认删除?'}, :class => 'IconA', :title => '删除包装箱' %>

              <% end %>

              <%= link_to content_tag(:i, '', :class => 'glyphicon glyphicon-log-out'), {controller: 'logistics_containers', action: 'export', id: package.id}, class: 'IconA', :title => '导出包装箱数据' %>
            </td>

          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<div class="digg_pagination">
  <%= will_paginate @packages, :container => false %>
</div>
<script>
    $(function () {
        $(".datepicker").datetimepicker({
            lang: 'ch',
            format: 'Y-m-d H:i'
        });
    });

    $('.up_search').click(function () {
        var this_arrow = $(this);
        $('.all-search').slideToggle(300, function () {
            if (this_arrow.children('i').hasClass('glyphicon-chevron-up')) {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-down');
                this_arrow.children('i').attr('title', '展开搜索条件');
            } else {
                this_arrow.children('i').attr('class', 'glyphicon glyphicon-chevron-up');
                this_arrow.children('i').attr('title', '收起搜索条件');
            }
        });
    })
</script>
